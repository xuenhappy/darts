// Configuration options
{
    //the services for segment plugin used
    "dservices": {
        "wtype.encoder": {
            "type": "LabelEncoder",
            "hx.file": "data/codes/type.hx.txt"
        },
        "wordpiece.dict": {
            "type": "WordPice",
            "base.dir": "data/models/codex"
        }
    },
    //all the recognizers plugin
    "recognizers": {
        "date.dict": {
            "pbfile.path": "data/model-dict/mini_dict.pb.gz",
            "type": "HmmRecongnizer"
        },
        "hmm.dict": {
            "pbfile.path": "data/model-dict/mini_dict.pb.gz",
            "type": "HmmRecongnizer"
        },
        "inner.dict": {
            "pbfile.path": "data/models/panda.pbs",
            "atom.mode": "false",
            "type": "DictWordRecongnizer"
        },
        "pinyin.dict": {
            "type": "",
            "data.dir": ""
        }
    },
    // all the deciders plugins
    "deciders": {
        "bert.embed": {
            "model.path": "",
            "type": "TinyBertPersenter"
        },
        "elmo.embed": {
            "deps": {
                "encoder": ""
            },
            "model.path": "",
            "type": "ElmoPersenter"
        },
        "mini.ngram": {
            "dat.dir": "data/model-dict/bigram",
            "type": "BigramPersenter"
        },
        "mini.rule": {
            "type": "MinCoverPersenter"
        },
        "wordvec.embed": {
            "model.path": "",
            "type": ""
        },
        "pinyin.embeder": {
            "type": "",
            "model.path": ""
        }
    },
    // all mode that the segment working
    "modes": {
        "fast": {
            "decider": "",
            "recognizers": []
        },
        "smart": {
            "decider": "",
            "recognizers": []
        },
        "pinyin": {
            "decider": "pinyin.embeder",
            "recognizers": [
                "pinyin.dict"
            ]
        }
    },
    //which model to load for default
    "default.mode": "smart"
}